<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.ScrollPane?>
<GridPane fx:controller="bg.uni_sofia.fmi.ai.FruitRecognizer.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <children>
        <ScrollPane hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED">
            <content>
             <ImageView fx:id="imageView" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   GridPane.columnSpan="1" />
            </content>
        </ScrollPane>
        <Button fx:id="cameraButton" text="camera" GridPane.columnIndex="0" GridPane.rowIndex="1"
                GridPane.columnSpan="1"/>
    </children>
</GridPane>